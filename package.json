  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@significa/eslint-config": "^2.0.1",
    "@significa/prettier-config": "^2.0.0",
    "@significa/tsconfig-config": "^2.0.0",
    "@types/react-dom": "^18.0.6",
    "@types/react": "^18.0.17",
    "eslint": "^8.21.0",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "lint-staged": "^13.0.3",
    "next": "^12.2.5",
    "prettier": "^2.7.1",
    "react-dom": "^18.2.0",
    "react": "^18.2.0",
    "typescript": "4.7.4"
  }
